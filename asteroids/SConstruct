env = Environment(LIBS=['SDLmain',
                        'SDL2', 'dl', 'GL'],
    CPPFLAGS=['-std=c++1y', '-g'],
                  LIBPATH = ['/usr/lib/x86_64-linux-gnu'],
                  CPPPATH=['/usr/include/SDL2'])

game = env.Object('game.cpp')
field = env.Object('field.cpp')
imgui_demo = env.Object('imgui_demo.cpp')
imgui_draw = env.Object('imgui_draw.cpp')
imgui = env.Object('imgui.cpp')
imgui_impl_sdl = env.Object('imgui_impl_sdl.cpp')
gl3w =  env.Object('GL/gl3w.c')
types = env.Object('types.cpp')

main = env.Program('main' , ['main.cpp',game, field, imgui, imgui_demo, imgui_draw, gl3w, imgui_impl_sdl, types] )

#example = env.Program('example', ['example.cpp', imgui, imgui_demo, imgui_draw, gl3w, imgui_impl_sdl_gl3] )




